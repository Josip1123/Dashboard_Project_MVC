

@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

<div class="center form-wrapper">
    <form class="form" method="POST">
        <div class="form-header">
            <h3>Login</h3>
            <button class="login-with-x btn">Sign in with X</button>
        </div>
        <div class="or-line">
            <p><span>OR</span></p>
        </div>
        <label for="email">Email:</label>
        <input
            type="email"
            id="email"
            name="email"
            placeholder="Type in you email"
            required
        />

        <label for="password">Password:</label>
        <input
            type="password"
            id="password"
            name="password"
            placeholder="Type in your password"
            required
        />

        <div class="checkbox-container remember">
            <div>
                <input
                    type="checkbox"
                    id="terms"
                    name="terms"
                    required
                />
                <label class="checkbox-label" for="terms"> Remember Me </label>
            </div>
            <a href="#">Forgot Password?</a>
        </div>

        <button class="btn btn-primary" type="submit">Login</button>
        <p class="login-text">
            Don't have an account? <span><a href="#">Sign up</a></span>
        </p>
    </form>
</div>
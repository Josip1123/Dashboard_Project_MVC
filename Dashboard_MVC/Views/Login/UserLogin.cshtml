
@model Business.Models.UserSignInForm
@{
    ViewBag.Title = "SignIn";
    Layout = "_Layout";
}

<div class="center form-wrapper">
    <form asp-action="UserLogin" asp-controller="Login" class="form" method="POST" novalidate>
        <div class="form-header">
            <h3>Login</h3>
            <button class="login-with-x btn">Sign in with X</button>
        </div>
        <div class="or-line">
            <p><span>OR</span></p>
        </div>
        <label asp-for="Email">Email:</label>
        <input
            type="email"
            id="email"
            asp-for="Email"
            placeholder="Type in you email"
        />

        <label asp-for="Password">Password:</label>
        <input
            type="password"
            id="password"
            asp-for="Password"
            placeholder="Type in your password"
        />

        <div class="checkbox-container remember">
            <div>
                <input
                    type="checkbox"
                    id="terms"
                    name="terms"
                />
                <label class="checkbox-label" for="terms"> Remember Me (not implemented) </label>
            </div>
            <a href="#">Forgot Password?</a>
        </div>

        <button class="btn btn-primary" type="submit">Login</button>
        <p class="login-text">
            Don't have an account? <span><a href="#">Sign up</a></span>
        </p>
    </form>
</div>
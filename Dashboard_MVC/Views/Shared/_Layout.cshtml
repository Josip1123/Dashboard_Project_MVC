@{
    Context.Request.Cookies.TryGetValue("darkmode", out var darkVal);
    bool isDark = string.Equals(darkVal, "true", StringComparison.OrdinalIgnoreCase);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="icon" href="~/img/favicon.svg" type="image/x-icon" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true"/>
</head>
<body class="@(isDark ? "darkmode" : "" )">
@RenderBody()
@await Html.PartialAsync("Partials/_cookieConsent")
@await Html.PartialAsync("Partials/_ValidationJs")
<script src="@Url.Content("~/JS/main.js")"></script>

</body>
</html>